{% extends 'base.html.twig' %}

{% block title %}
    Liste des pr√©sences
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col"></div>
            <div class="col"><a class="btn btn-success" href="{{ path('admin_addSalle') }}">Ajouter une salle !</a></div>
            <div class="col"></div>
        </div>
        <div class="row">
            <div class="mx-auto">
                <div class="table-responsive" style="">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                        <tr>
                            <th>Nom</th>
                            <th>Nombre de place</th>
                            <th>Type de salle</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for salle in salles %}
                            <tr>
                                <td>{{ salle.nom }}</td>
                                <td>{{ salle.nombrePlaces }}</td>
                                <td>{{ salle.type.nom }}</td>
                                <td><a href="{{ path('admin_editSalle', {'id': salle.id}) }}">Editer</a> /
                                    <a href="{{ path('admin_deleteSalle', {'id': salle.id}) }}">Supprimer</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}