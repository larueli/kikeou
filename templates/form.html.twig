{% extends 'base.html.twig' %}

{% block title %}
    {{ titre | default('Formulaire') }}
{% endblock %}

{% block content %}
    <div class="container my-auto">
        <div class="row">
            <h1 class="cover-heading">{{ titre | default('Formulaire') }}</h1>
        </div>
        <div class="row text-left">
            <p class="lead">{{ (description | default('') )|raw }}</p>
        </div>
        <div class="row my-2">
            <div class="col-md"></div>
            <div class="col">
                {{ form_start(formulaire) }}
                {{ form_widget(formulaire) }}
                {{ form_end(formulaire) }}
            </div>
            <div class="col-md"></div>
        </div>
    </div>
{% endblock %}

